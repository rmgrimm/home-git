#!/bin/sh

if [ -e "$HOME/.local/share/sshag/sshag.sh" ]; then
    if [ ! -e "/etc/X11/Xsession.options" ] ||
       ! grep -q "^use-ssh-agent$" "/etc/X11/Xsession.options" ||
       [ ! -e "/usr/share/upstart/sessions/ssh-agent.conf" ]; then
        /bin/bash "$HOME/.local/share/sshag/sshag.sh"
    fi
fi

