#!/bin/sh

if [ -e "$HOME/.local/sshag/sshag.sh" ]; then
    if [ ! -e "/etc/X11/Xsession.options" ] ||
       ! grep -q "^use-ssh-agent$" "/etc/X11/Xsession.options" ||
       [ ! -e "/usr/share/upstart/sessions/ssh-agent.conf" ]; then
        /bin/bash "$HOME/.local/sshag/sshag.sh"
    fi
fi

if [ -x "/usr/bin/emacs24" ]; then
    /usr/bin/emacs24 --daemon &
fi
